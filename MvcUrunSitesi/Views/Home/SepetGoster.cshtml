@model IEnumerable<MvcUrunSitesi.Entities.Sepet>

@{
    ViewBag.Title = "Sepetim";
}

<h2>Sepetim</h2>

<table class="table">
    <tr>
        <th>Ürün Resmi</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="~/Img/Product/@item.Product.UrunResmi" height="60" /></td>
            <td>@Html.DisplayFor(modelItem => item.Product.UrunAdi)</td>
            <td>@Html.DisplayFor(modelItem => item.Product.UrunFiyati) TL</td>
            <td>@Html.ActionLink("Sil", "SepettenSil", new { id = item.Id })</td>
        </tr>
    }
    <tr>
        <td colspan="3"></td>
        <td><a href="/satinal" class="btn btn-primary" role="button">Satınal</a></td>
    </tr>
</table>
